<controls:MetroWindow x:Class="Fawrek.Editor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:int="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:cs="clr-namespace:Fawrek.Editor.UserControls"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:conv="clr-namespace:MahApps.Metro.Converters;assembly=MahApps.Metro"
    Title="Fawrek" Height="800" Width="1280" WindowTransitionsEnabled="False">
    
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TabControl Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                <TabItem Header="Scene Editor">
                    <cs:SceneEditorControl/>
                </TabItem>
                <TabItem Header="Animation Editor">
                    <cs:AnimationEditorControl/>
                </TabItem>
            </TabControl>
            <Grid Grid.Column="1" Grid.Row="0" Margin="5,80,5,5">
                <int:WindowsFormsHost  Width="540" Height="480">
                    <cs:CustomOpenGLControl Name="OpenGLControl" />
                </int:WindowsFormsHost>
            </Grid>
            <GroupBox x:Name="logPanel" Grid.Column="1"  Grid.Row="1" Header="Log" Margin="5,10">
                <TextBlock/>
            </GroupBox>
        </Grid>
    </Grid>
</controls:MetroWindow>
